<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <fragment
        android:id="@+id/fragment_main_large_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:name="com.gaofh.lovehym.NewsTitleFragment"/>
    <FrameLayout
        android:id="@+id/main_large_content_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3">
    <fragment
        android:id="@+id/fragment_main_large_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.gaofh.lovehym.NewsContentFragment"/>
    </FrameLayout>




</LinearLayout>